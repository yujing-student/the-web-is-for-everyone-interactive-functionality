<%- include('./partials/head-lijst') %>


<section class="users-section">
    <h2>gebruikers</h2>
    <p>klik op je icoontje om je eigen lijst te zien nu zit je in de gezamelijke lijst</p>
    <div class="styling-images-user">
        <img src="../images/geel.jpg" class="user-profiles" alt="user geel">
        <img src="../images/blauw.jpg" class="user-profiles" alt="user geel">
        <img src="../images/rood.jpg" class="user-profiles" alt="user geel">
        <img src="../images/groen.jpg" class="user-profiles" alt="user geel">
    </div>

</section>


<div class="grid-container-houses-lijst">

    <% list.houses.forEach(house => { %>
        <!--    hoouses staat niet dubbel dit heb je nodig omdat je de data uit de houses tabel nodig hebt zie de 1ste get route /-->

        <article class="houses">
            <ul class="image-house-data">
                <li><img class="image-size"
                         src="https://fdnd-agency.directus.app/assets/<%= house.f_houses_id.poster_image %>"
                         alt="image house"></li>
                <li class="child-li-house-card">
                    <a href="../Detailpage/<%= house.id %>"><%= house.f_houses_id.street %> <%= house.f_houses_id.house_nr %><%= house.f_houses_id.house_nr_addition %> </a>
                </li>

                <li class="child-li-house-card"><%= house.f_houses_id.postal_code %> <%= house.f_houses_id.city %></li>
                <li class="child-li-house-card price">â‚¬<%= house.f_houses_id.price %></li>
                <li class=" agen-long-text"><%= house.f_houses_id.agent %></li>
                <li class="child-li-house-card">
                    <button class="button-score-page">
                        <a class="special-link" href="../score/<%=house.f_houses_id.id %>">Bekijk de score
                        </a>
                    </button>


                </ul>


        </article>
    <% }); %>
</div>