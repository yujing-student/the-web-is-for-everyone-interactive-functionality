<form method="POST" action="/score/<%= house.id %>" class="chatbox">
    <input type="hidden" value="<%= house.id %>">
    <label for="algemeen">algemeen:
        <input type="number" id="algemeen"  name="algemeenNumber" value="" placeholder="0">
    </label>
    <label for="keuken">keuken:
        <input type="number" id="keuken"  name="keukenNumber" value="" placeholder="0">
    </label>
    <label for="badkamer">badkamer:
        <input type="number" id="badkamer"  name="badkamerNumber" value=""  placeholder="0">
    </label>
    <label for="tuin">tuin:
        <input type="number" id="tuin"  name="tuinNumber" value=""  placeholder="0">
    </label>
    <button type="submit" id="submit-cijfer" class="button-notes notes">geef je cijfer</button>
</form>


<h2 class="berichten-score">beoordeling agemeen</h2>
<ul class="output">
    <% if (algemeen.length > 0) { %>
        <% algemeen.forEach(number =>{ %>
            <li class="message">Cijfer algemeen: <%= number %></li>
        <% }) %>
    <% } else { %>
        <li class="message">Cijfer algemeen: No number entered</li>
    <% } %>

    <% if (keuken.length > 0) { %>
        <% keuken.forEach(kitchen_number =>{ %>
            <li class="message">Cijfer keuken: <%= kitchen_number %></li>
        <% }) %>
    <% } else { %>
        <li class="message">Cijfer keuken: No number entered</li>
    <% } %>

    <% if (badkamer.length > 0) { %>
        <% keuken.forEach(kitchen_number =>{ %>
            <li class="message">Cijfer badkamer: <%= kitchen_number %></li>
        <% }) %>
    <% } else { %>
        <li class="message">Cijfer badkamer: No number entered</li>
    <% } %>

    <% if (tuin.length > 0) { %>
        <% tuin.forEach(kitchen_number =>{ %>
            <li class="message">Cijfer tuin: <%= kitchen_number %></li>
        <% }) %>
    <% } else { %>
        <li class="message">Cijfer tuin: No number entered</li>
    <% } %>
</ul>

