                <% } %>

                <% if (keuken.length > 0) { %>
                    <% keuken.forEach(kitchen_number =>{ %>
                        <li class="message">Cijfer keuken: <%= kitchen_number %></li>
                    <% }) %>
                <% } else { %>
                    <li class="message">Cijfer keuken: 0</li>
                <% } %>

                <% if (badkamer.length > 0) { %>
                    <% keuken.forEach(kitchen_number =>{ %>
                        <li class="message">Cijfer badkamer: <%= kitchen_number %></li>
                    <% }) %>
                <% } else { %>
                    <li class="message">Cijfer badkamer: 0</li>
                <% } %>

                <% if (tuin.length > 0) { %>
                    <% tuin.forEach(kitchen_number =>{ %>
                        <li class="message">Cijfer tuin: <%= kitchen_number %></li>
                    <% }) %>
                <% } else { %>
                    <li class="message">Cijfer tuin: 0</li>
                <% } %>
            </ul>
        </section>
    </div>
</main>
