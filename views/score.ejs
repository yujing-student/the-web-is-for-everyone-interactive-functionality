                <% } %>

                <% if (tuin.length > 0) { %>
                    <% tuin.forEach(kitchen_number =>{ %>
                        <li class="message">Cijfer tuin: <%= kitchen_number %></li>
                    <% }) %>
                <% } else { %>
                    <li class="message">Cijfer tuin: 0</li>
                <% } %>
            </ul>
        </section>
        <section class="users_score_rating second_user">
            <p><img src="../images/rood.jpg" class="user" alt="user geel"></p>

            <h2 class="berichten-score">piet</h2>

            <ul class="output">
                <% if (algemeen.length > 0) { %>
